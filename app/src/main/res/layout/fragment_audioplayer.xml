<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AudioplayerFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="306dp"
        android:layout_height="320dp"
        android:layout_marginVertical="12dp"
        android:contentDescription="placeholder_img"
        android:src="@drawable/placeholder_img" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationViewHeart"
        android:onClick="onLike"
        android:layout_width="72dp"
        android:layout_height="55dp"
        android:layout_gravity="right|top"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animation_lkwlpi5k" />

    <TextView
        android:id="@+id/song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:elegantTextHeight="true"
        android:text="Songtitle"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:elegantTextHeight="true"
        android:text="Artistname"
        android:textColor="#000000"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="298dp"
        android:layout_height="30dp"
        android:progress="0" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev"
            android:onClick="onPreviousCLicked"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_skip_previous_24" />

        <ImageView
            android:id="@+id/back"
            android:onClick="onBackClicked"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/play_button"
            android:onClick="onPlayClicked"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_play_arrow_24" />

        <ImageView
            android:id="@+id/forward"
            android:onClick="onForwardClicked"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_forward_ios_24" />

        <ImageView
            android:id="@+id/next"

            android:onClick="onNextClicked"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_skip_next_24" />

    </LinearLayout>

</LinearLayout>